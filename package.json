{
  "name": "play-ts-cucumber",
  "version": "1.0.0",
  "description": "Playwright Cucumber TS framework - WestPac KiwiSaver",
  "main": "index.js",
  "scripts": {
    "debug": "cross-env ENV=prod PWDEBUG=1 DEBUG=pw:api cucumber-js --config=config/cucumber.js",
    "pretest": "npx ts-node src/helper/report/init.ts",
    "test": "cross-env ENV=prod FORCE_COLOR=0 cucumber-js --config=config/cucumber.js || true",
    "posttest": "npx ts-node src/helper/report/report.ts",
    "test:failed": "cucumber-js -p rerun @rerun.txt"
  },
  "keywords": [
    "cucumber",
    "cucumber - TS",
    "playwright-cucumber"
  ],
  "author": "Abdul Nadeem Mohammad",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "10.3.0",
    "@playwright/test": "1.42.0",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "fs-extra": "11.2.0",
    "multiple-cucumber-html-reporter": "3.6.2",
    "ts-node": "10.9.2",
    "winston": "3.12.0"
  }
}